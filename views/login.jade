extends layout

block content
  .container
    img(id="home" onclick='goHome()' src="/file/Default.jpg")
    h1 Login Page
    br
    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", id="username", placeholder='Enter Email')
      .form-group
        input.form-control(type='password', name="password", id="password", placeholder='Password')
      button.btn.btn-default(type='submit' id='loginsubmit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel